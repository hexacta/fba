 <% provide(:title, t(:edit_user_role_title)) %>
<h1><%= t(:edit_user_role_heading) %></h1>

 <%= form_for(:rol, url: role_path, method:"put") do |r| %>
	<% for role in Role.find(:all) %>
	<div>
	  <%= check_box_tag "role_checkbox[]", role.id, @user.roles.include?(role) %>
	  <%= label_tag role.name %>
	</div>
	<% end %>
	<div class="span6 offset3">
	<%= r.submit t(:save_roles), class: "btn btn-large btn-primary" %>
	</div>
<% end %>
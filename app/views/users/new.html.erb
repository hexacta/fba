<% provide(:title, t(:new_user_title)) %>
<h1><%= t(:new_user_heading) %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit t(:create_user), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
<% provide(:title, t(:edit_user_title)) %>
<h1><%= t(:edit_user_heading) %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit t(:save_changes), class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <%= link_to t(:change), 'http://gravatar.com/emails', target: '_blank' %>
  </div>
</div>